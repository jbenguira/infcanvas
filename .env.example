# Server Configuration
PORT=3001

# Development vs Production
NODE_ENV=development

# Optional: Enable debug logging
DEBUG=false

# Optional: Configure CORS origin (default: allows all origins)
# CORS_ORIGIN=https://yourdomain.com

# Optional: Configure cleanup schedule (default: daily at 2 AM)
# CLEANUP_SCHEDULE=0 2 * * *

# Optional: Configure room cleanup age in days (default: 30)
# ROOM_CLEANUP_DAYS=30

# Optional: Configure upload size limit in MB (default: 3)
# UPLOAD_SIZE_LIMIT=3